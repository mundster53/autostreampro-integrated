{
  "outputDirectory": ".",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/dashboard", "destination": "/dashboard.html" },
    { "source": "/signup", "destination": "/signup.html" },
    { "source": "/login", "destination": "/login/index.html" },
    { "source": "/onboarding", "destination": "/onboarding.html" },
    { "source": "/onboarding-wizard", "destination": "/onboarding-wizard.html" },
    { "source": "/api/(.*)", "destination": "https://autostreampro-backend-production.up.railway.app/api/$1" },
    { "source": "/.netlify/functions/(.*)", "destination": "https://autostreampro-backend-production.up.railway.app/api/$1" }
  ]
}
