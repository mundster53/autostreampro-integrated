<body>
    <h2>ðŸŽ® Connecting Twitch...</h2>
    <div class="spinner"></div>
    <p>Processing authorization...</p>
    
    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get('code');
        const error = urlParams.get('error');
        
        if (error) {
            window.location.href = `/onboarding.html?error=twitch_${error}`;
        } else if (code) {
            window.location.href = `/onboarding.html?code=${code}&state=twitch`;
        } else {
            window.location.href = `/onboarding.html?error=twitch_no_code`;
        }
    </script>
</body>
